<Window x:Class="GBATool.Views.ProjectPropertiesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GBATool.Views"
        xmlns:b="clr-namespace:GBATool.Utils"
        xmlns:vm="clr-namespace:GBATool.ViewModels"
        xmlns:cv="clr-namespace:ArchitectureLibrary.WPF.Converters;assembly=ArchitectureLibrary"
        xmlns:ex="clr-namespace:ArchitectureLibrary.WPF.Extensions;assembly=ArchitectureLibrary"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:enum="clr-namespace:GBATool.Enums"
        mc:Ignorable="d"
        Title="Project properties" 
        SizeToContent="Height"
        Width="450"
        ShowInTaskbar="False"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Window.DataContext>
        <vm:ProjectPropertiesDialogViewModel />
    </Window.DataContext>
    <Window.Resources>
        <cv:ParametersConverter x:Key="parametersConverter"/>
        <cv:EnumMatchToBooleanConverter x:Key="enumConverter" />
    </Window.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding CloseDialogCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Row="1" Grid.Column="1" Header="Header" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Content="Project Title:" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBox Grid.Column="1" 
                         Name="tbProjectTitle"
                         Grid.Row="0" 
                         MaxLength="12"
                         Width="120"
                         HorizontalAlignment="Left"
                         TextWrapping="NoWrap"
                         CharacterCasing="Upper"
                         VerticalContentAlignment="Center"
                         Text="{Binding ProjectTitle}"
                         b:TextInputBindingManager.UpdatePropertySourceWhenEnterPressed="TextBox.Text"/>
                <Label Content="Project Initials:" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBox Grid.Column="1" 
                         Name="tbProjectInitials"
                         Grid.Row="1" 
                         Width="40"
                         MaxLength="2"
                         VerticalContentAlignment="Center"
                         HorizontalAlignment="Left"
                         TextWrapping="NoWrap"
                         CharacterCasing="Upper"
                         Text="{Binding ProjectInitials}"
                         b:TextInputBindingManager.UpdatePropertySourceWhenEnterPressed="TextBox.Text"/>
                <Label Content="Software Version:" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBox Grid.Column="1" 
                         Name="tbSoftwareVersion"
                         Grid.Row="2" 
                         Width="40"
                         VerticalContentAlignment="Center"
                         PreviewTextInput="NumberValidationTextBox"
                         MaxLength="3"
                         HorizontalAlignment="Left"
                         TextWrapping="NoWrap"
                         Text="{Binding SoftwareVersion}"
                         b:TextInputBindingManager.UpdatePropertySourceWhenEnterPressed="TextBox.Text"/>
                <Label Content="Developer Id:" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBox Grid.Column="1" 
                         Name="tbDeveloperId"
                         Grid.Row="3" 
                         Width="40"
                         MaxLength="2"
                         VerticalContentAlignment="Center"
                         HorizontalAlignment="Left"
                         TextWrapping="NoWrap"
                         CharacterCasing="Upper"
                         Text="{Binding DeveloperId}"
                         b:TextInputBindingManager.UpdatePropertySourceWhenEnterPressed="TextBox.Text"/>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="3" Grid.Column="1" Header="Game properties" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Label Content="Sprite Pattern Format:" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <ComboBox Grid.Column="1" 
                          Grid.Row="3" 
                          HorizontalAlignment="Left" VerticalAlignment="Center" 
                          Width="120" 
                          DisplayMemberPath="Description"
                          ItemsSource="{Binding Source={ex:EnumBindingSource {x:Type enum:SpritePattern}}}"
                          SelectedValue="{Binding Path=SelectedSpriteFormat}"
                          SelectedValuePath="Value"/>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="5" Grid.Column="1" Header="Output" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <GroupBox Header="Path" Padding="5" Grid.Row="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Grid.Column="1" Content="Source code output directory" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <DockPanel Grid.Row="1" Grid.Column="1" LastChildFill="True">
                            <Button DockPanel.Dock="Right" HorizontalAlignment="Right" 
                                    VerticalAlignment="Center" Width="30" Content="..." 
                                    Command="{Binding BrowseFolderCommand}" x:Name="btnSourcePath">
                                <Button.CommandParameter>
                                    <MultiBinding Converter="{StaticResource parametersConverter}">
                                        <Binding RelativeSource="{RelativeSource Self}"/>
                                        <Binding Path="Text" ElementName="tbSourcePath"/>
                                    </MultiBinding>
                                </Button.CommandParameter>
                            </Button>
                            <TextBox Name="tbSourcePath" Height="23" Text="{Binding FolderSourcePath, UpdateSourceTrigger=PropertyChanged}" 
                                     TextWrapping="NoWrap" VerticalAlignment="Center" Width="auto"/>
                        </DockPanel>
                        <Label Grid.Row="2" Grid.Column="1" Content="Assets output directory" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <DockPanel Grid.Row="3" Grid.Column="1" LastChildFill="True">
                            <Button DockPanel.Dock="Right" HorizontalAlignment="Right" 
                                    VerticalAlignment="Center" Width="30" Content="..." 
                                    Command="{Binding BrowseFolderCommand}" x:Name="btnAssetsPath">
                                <Button.CommandParameter>
                                    <MultiBinding Converter="{StaticResource parametersConverter}">
                                        <Binding RelativeSource="{RelativeSource Self}"/>
                                        <Binding Path="Text" ElementName="tbAssetsPath"/>
                                    </MultiBinding>
                                </Button.CommandParameter>
                            </Button>
                            <TextBox Name="tbAssetsPath" Height="23" Text="{Binding FolderAssetsPath, UpdateSourceTrigger=PropertyChanged}" 
                                     TextWrapping="NoWrap" VerticalAlignment="Center" Width="auto"/>
                        </DockPanel>
                    </Grid>
                </GroupBox>
                <GroupBox Header="File formats:" Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Label Content="Header:" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <ComboBox Grid.Column="1" 
                                  Grid.Row="0"
                                  HorizontalAlignment="Left" VerticalAlignment="Center" 
                                  Width="120" 
                                  DisplayMemberPath="Description"
                                  ItemsSource="{Binding Source={ex:EnumBindingSource {x:Type enum:OutputFormat}}}"
                                  SelectedValue="{Binding Path=SelectedOutputFormatHeader}"
                                  SelectedValuePath="Value"/>
                        <Label Content="Palettes:" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <ComboBox Grid.Column="1" 
                                  Grid.Row="1"
                                  HorizontalAlignment="Left" VerticalAlignment="Center" 
                                  Width="120" 
                                  DisplayMemberPath="Description"
                                  ItemsSource="{Binding Source={ex:EnumBindingSource {x:Type enum:OutputFormat}}}"
                                  SelectedValue="{Binding Path=SelectedOutputFormatPalettes}"
                                  SelectedValuePath="Value"/>
                        <Label Content="Characters:" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <ComboBox Grid.Column="1" 
                                  Grid.Row="2"
                                  HorizontalAlignment="Left" VerticalAlignment="Center" 
                                  Width="120" 
                                  DisplayMemberPath="Description"
                                  ItemsSource="{Binding Source={ex:EnumBindingSource {x:Type enum:OutputFormat}}}"
                                  SelectedValue="{Binding Path=SelectedOutputFormatCharacters}"
                                  SelectedValuePath="Value"/>
                        <Label Content="Screenblock :" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <ComboBox Grid.Column="1" 
                                  Grid.Row="3"
                                  HorizontalAlignment="Left" VerticalAlignment="Center" 
                                  Width="120" 
                                  DisplayMemberPath="Description"
                                  ItemsSource="{Binding Source={ex:EnumBindingSource {x:Type enum:OutputFormat}}}"
                                  SelectedValue="{Binding Path=SelectedOutputFormatScreenBlock}"
                                  SelectedValuePath="Value"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>
        <Button Grid.Row="6" Grid.Column="1" Margin="10" Content="Close" IsCancel="True" Width="100" />
    </Grid>
</Window>
