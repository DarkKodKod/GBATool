<UserControl x:Class="GBATool.Views.CharacterFrameEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GBATool.Views"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:GBATool.Utils.Behaviors"
             xmlns:ex="clr-namespace:ArchitectureLibrary.WPF.Extensions;assembly=ArchitectureLibrary"
             xmlns:cv="clr-namespace:ArchitectureLibrary.WPF.Converters;assembly=ArchitectureLibrary"
             xmlns:enum="clr-namespace:GBATool.Enums"
             mc:Ignorable="d" 
             xmlns:vm="clr-namespace:GBATool.ViewModels"
             Unloaded="UserControl_Unloaded"
             PreviewKeyDown="UserControl_PreviewKeyDown"
             Loaded="UserControl_Loaded"
             d:DesignHeight="790" d:DesignWidth="1050">
    <UserControl.DataContext>
        <vm:CharacterFrameEditorViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <cv:ParametersConverter x:Key="parametersConverter"/>
    </UserControl.Resources>
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button ToolTip="Back to frames view"
                Width="80"
                Height="30"
                Margin="5,0,0,0"
                HorizontalAlignment="Left"
                Command="{Binding SwitchCharacterFrameViewCommand}">
                <Button.CommandParameter>
                    <MultiBinding Converter="{StaticResource parametersConverter}">
                        <Binding Path="TabID" />
                        <Binding Path="FrameID"/>
                        <Binding Path="FrameIndex" />
                    </MultiBinding>
                </Button.CommandParameter>
                <Image Width="16" Height="16" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Source="/resources/play.png">
                    <Image.RenderTransform>
                        <ScaleTransform ScaleX="-1"/>
                    </Image.RenderTransform>
                    <Image.RenderTransformOrigin>
                        <Point X="0.5"/>
                    </Image.RenderTransformOrigin>
                </Image>
            </Button>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="30,0,30,0" />
            <CheckBox VerticalAlignment="Center" IsChecked="{Binding EnableOnionSkin, Mode=TwoWay}" Margin="0,0,10,0">Enable Onion Skin</CheckBox>
            <Label VerticalAlignment="Center">Opacity:</Label>
            <Slider 
                Name="slOpacity" 
                Minimum="0" 
                Maximum="1" 
                Width="100" 
                TickFrequency="0.01" 
                IsSnapToTickEnabled="True" 
                VerticalAlignment="Center" 
                Value="{Binding OnionSkinOpacity}"
                IsEnabled="{Binding EnableOnionSkin}" />
            <TextBox 
                VerticalAlignment="Center"
                Width="30"
                IsEnabled="False"
                Text="{Binding ElementName=slOpacity, Path=Value, UpdateSourceTrigger=PropertyChanged}" 
                TextAlignment="Center"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="250"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <GroupBox Grid.Row="0" Grid.Column="0" Header="Frame" Margin="10,0,10,0" Padding="10">
                <ScrollViewer
                    PanningMode="Both"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto">
                    <local:FrameView 
                        Width="925"
                        Height="605"
                        x:Name="frameView" 
                        AllowDrop="True"
                        Drop="FrameView_Drop"
                        DragOver="FrameView_DragOver"
                        MouseMove="FrameView_MouseMove"
                        DragLeave="FrameView_DragLeave"
                        MouseDown="FrameView_MouseDown"
                        MouseUp="FrameView_MouseUp"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                </ScrollViewer>
            </GroupBox>
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <GroupBox 
                    Header="Sprite Configuration" 
                    Grid.Row="0" 
                    Margin="10,0,10,0" 
                    Padding="10" 
                    IsEnabled="{Binding EnableSpriteProperties}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0">
                            <CheckBox IsChecked="{Binding IsFlippedHorizontal, Mode=TwoWay}" HorizontalAlignment="Left">Flip Horizontal</CheckBox>
                            <CheckBox IsChecked="{Binding IsFlippedVertical, Mode=TwoWay}" HorizontalAlignment="Left" Margin="30,0,0,0">Flip Vertical</CheckBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="2">
                            <CheckBox IsChecked="{Binding IsEnableMosaic, Mode=TwoWay}" HorizontalAlignment="Left">Enable Mosaic</CheckBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="4">
                            <Label>Object Mode:</Label>
                            <ComboBox DisplayMemberPath="Description"
                                      HorizontalAlignment="Left" VerticalAlignment="Center" 
                                      ItemsSource="{Binding Source={ex:EnumBindingSource {x:Type enum:ObjectMode}}}"
                                      SelectedValue="{Binding Path=ObjectMode}"
                                      SelectedValuePath="Value">
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="6">
                            <Label>Graphic Mode:</Label>
                            <ComboBox DisplayMemberPath="Description"
                                      HorizontalAlignment="Left" VerticalAlignment="Center" 
                                      ItemsSource="{Binding Source={ex:EnumBindingSource {x:Type enum:GraphicMode}}}"
                                      SelectedValue="{Binding Path=GraphicMode}"
                                      SelectedValuePath="Value">
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Collisions" Grid.Row="1" Margin="10,10,10,0" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <ListView Grid.Row="0"
                                  x:Name="lvFrameCollisions"
                                  VirtualizingPanel.ScrollUnit="Pixel"
                                  HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Stretch" 
                                  SelectionMode="Single"
                                  SelectedValue="{Binding SelectedCollision}"
                                  ItemsSource="{Binding CharacterCollisions}">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Black" BorderThickness="1" Background="{Binding Color}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="30"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Column="0" Grid.Row="0">Width:</TextBlock>
                                            <TextBox Text="{Binding Width}" Grid.Column="1" Grid.Row="0" TextAlignment="Right"/>
                                            <TextBlock Grid.Column="0" Grid.Row="1">Height:</TextBlock>
											<TextBox Text="{Binding Height}" Grid.Column="1" Grid.Row="1" TextAlignment="Right"/>
                                            <TextBlock Grid.Column="0" Grid.Row="2">Offset X:</TextBlock>
											<TextBox Text="{Binding OffsetX}" Grid.Column="1" Grid.Row="2" TextAlignment="Right"/>
                                            <TextBlock Grid.Column="0" Grid.Row="3">Offset Y:</TextBlock>
											<TextBox Text="{Binding OffsetY}" Grid.Column="1" Grid.Row="3" TextAlignment="Right"/>
											<Image Width="16" 
												   Height="16" 
												   Source="/resources/delete.png"
												   ToolTip="Delete collision"
                                                   Grid.Column="2">
												<i:Interaction.Behaviors>
													<behaviors:EventToCommandBehavior Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type UserControl}}, Path=DataContext.DeleteCollisionCommand}" Event="MouseUp" PassArguments="True" />
												</i:Interaction.Behaviors>
											</Image>
											<TextBlock Grid.Column="0" Grid.Row="4">Color:</TextBlock>
                                            <Button Grid.Column="1" Grid.Row="4" 
                                                    Background="{Binding Color, Mode=OneWay}" 
                                                    BorderThickness="1" 
                                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type UserControl}}, Path=DataContext.ChangeCollisionColorCommand}">
                                                <Button.CommandParameter>
                                                    <MultiBinding Converter="{StaticResource parametersConverter}">
                                                        <Binding Path="ID" />
                                                        <Binding Path="Color" />
                                                    </MultiBinding>
                                                </Button.CommandParameter>
                                            </Button>
                                            <TextBlock Grid.Column="0" Grid.Row="5">Mask:</TextBlock>
											<TextBox Text="{Binding Mask}" Grid.Column="1" Grid.Row="5" TextAlignment="Right"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <Button 
                            Grid.Row="2" 
                            Width="50"
                            Command="{Binding AddNewCollisionIntoSpriteFrameCommand}"
                            ToolTip="Add a new collision"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                            <Image Width="16" Height="16" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Source="/resources/add.png">
                            </Image>
                        </Button>
                    </Grid>
                </GroupBox>
            </Grid>
            <GroupBox Grid.ColumnSpan="2" Grid.Row="1" Header="Banks" Padding="10" Margin="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <ComboBox Width="200"
                                  ItemsSource="{Binding Banks}" 
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="Index"
                                  SelectedValue="{Binding Path=SelectedBank, Mode=TwoWay}">
                            <i:Interaction.Behaviors>
                                <behaviors:EventToCommandBehavior Command="{Binding FileModelVOSelectionChangedCommand}" Event="SelectionChanged" PassArguments="True" />
                            </i:Interaction.Behaviors>
                        </ComboBox>
                    </StackPanel>
                    <ScrollViewer
                        x:Name="srollViewer"
                        Grid.Row="2"
                        PanningMode="Both"
                        HorizontalScrollBarVisibility="Auto"
                        VerticalScrollBarVisibility="Visible" >
                        <local:BankViewerView 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            AllowDrop="True"
                            MouseMove="BankViewer_MouseMove"
                            DragOver="BankViewer_DragOver"
                            DragLeave="BankViewer_DragLeave"
                            Drop="BankViewer_Drop"
                            Force2DView="True"
                            x:Name="bankViewer"/>
                    </ScrollViewer>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
