<UserControl x:Class="GBATool.Views.FrameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GBATool.Views"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:GBATool.Utils.Behaviors"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             xmlns:cv="clr-namespace:ArchitectureLibrary.WPF.Converters;assembly=ArchitectureLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="605" d:DesignWidth="925">
    <UserControl.Resources>
        <system:Double x:Key="canvasWidth">232</system:Double>
        <system:Double x:Key="canvasHeight">152</system:Double>
    </UserControl.Resources>
    <Grid>
        <Canvas Width="{StaticResource canvasWidth}" 
                Height="{StaticResource canvasHeight}" 
		        Background="DarkGray"
                RenderOptions.BitmapScalingMode="NearestNeighbor"
                RenderTransform="4 0 0 4 -355 -230">
            <Border IsHitTestVisible="False">
                <Border.Background>
                    <VisualBrush TileMode="Tile"
					             Viewport="0,0,8,8" ViewportUnits="Absolute" 
					             Viewbox="0,0,8,8" ViewboxUnits="Absolute">
                        <VisualBrush.Visual>
                            <Rectangle Stroke="Magenta" StrokeThickness="0.1" Height="100" Width="100" />
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Border.Background>
                <Canvas 
                    Width="{StaticResource canvasWidth}" 
                    Height="{StaticResource canvasHeight}" 
                    x:Name="canvasGrid"
                    Background="Transparent">
                </Canvas>
            </Border>
            <Line
                X1="{Binding VerticalLineXPos}" Y1="0"
                X2="{Binding VerticalLineXPos}" Y2="152"
                Stroke="Red"
                IsHitTestVisible="False"
                StrokeThickness="0.5" />
            <Line
                X1="0" Y1="{Binding SpriteBase}"
                X2="152" Y2="{Binding SpriteBase}"
                Stroke="Green"
                IsHitTestVisible="False"
                StrokeThickness="0.5" />
            <Path 
                Data="{Binding CrossData}" 
                Stroke="Black"
                IsHitTestVisible="False"
                StrokeThickness="0.5"/>
            <Path 
                Data="{Binding OriginGuide}"
                Stroke="Yellow"
                IsHitTestVisible="False"
                StrokeThickness="0.3"/>
            <Rectangle
                x:Name="recSelectedArea"
                Visibility="{Binding MouseSelectionActive}"
                Width="{Binding MouseSelectionWidth}"
                Height="{Binding MouseSelectionHeight}"
                Stroke="White"
                IsHitTestVisible="False"
                Canvas.Left="{Binding MouseSelectionOriginX}"
                Canvas.Top="{Binding MouseSelectionOriginY}"
                StrokeThickness="0.4"
                StrokeDashArray="2,1" />
            <Canvas x:Name="parentOfSelectedSprites"
                    Width="{StaticResource canvasWidth}" 
                    Height="{StaticResource canvasHeight}" 
                    Background="Transparent"/>
            <Canvas x:Name="onionSelectedSprites"
                    Width="{StaticResource canvasWidth}" 
                    Height="{StaticResource canvasHeight}" 
                    Background="Transparent"/>
            </Canvas>
    </Grid>
</UserControl>
